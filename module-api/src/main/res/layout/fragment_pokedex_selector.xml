<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".opentriviadb.fragments.TriviaFragment"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        tools:src="@tools:sample/avatars" />
    <TextView
        android:id="@+id/pokemonNameTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="center"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        tools:text="Pokemon"/>
    <com.cwong51799.core.CustomStepperView
        android:id="@+id/pokemonStepper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
    />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="@color/colorAccent"
        android:drawableLeft="@drawable/ic_search_icon_foreground"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
    />


</LinearLayout>


